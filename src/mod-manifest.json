{
    "apiVersion": "1.3",
    "version": "1.0.0",
    "name": "Well Spacing (\"Gun Barrel\") Diagram",
    "id": "well-spacing-diagram",
    "icon": "icon.svg",
    "properties": [
        {
            "name": "mod-config",
            "type": "string",
            "defaultValue": ""
        }
    ],
    "dataViewDefinition": {
        "colorAxis": {
            "mode": "dual",
            "allowNonAggregatingMeasures": true,
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        },
        "axes": [
            {
                "name": "Trellis By",
                "mode": "categorical",
                "placement": "none"
            },
            {
                "name": "Group By",
                "mode": "categorical",
                "placement": "none"
            },
            {
                "name": "Layer Type",
                "mode": "categorical",
                "placement": "none"
            },
            {
                "name": "Name",
                "mode": "categorical",
                "placement": "none"
            },
            {
                "name": "Label",
                "mode": "categorical",
                "placement": "none"
            },
            {
                "name": "Size",
                "mode": "continuous",
                "allowNonAggregatingMeasures": true,
                "placement": "none"
            },
            {
                "name": "X",
                "mode": "continuous",
                "allowNonAggregatingMeasures": true,
                "placement": "bottom"
            },
            {
                "name": "Y",
                "mode": "continuous",
                "allowNonAggregatingMeasures": true,
                "placement": "left"
            }
        ],
        "tooltip": {
            "enabled": true
        }
    },
    "files": [
        "index.html",
        "main.css",
        "default_configuration.js",
        "default_configuration_template.js",
        "well_spacing_diagram.css",
        "well_spacing_diagram.js",
        "main.js",
        "rect_marking.js",
        "utility.js",
        "viz_configuration.js",
        "lib/d3.v7.min.js",
        "images/right-angle.png",
        "images/straight-line.png"
    ]
}