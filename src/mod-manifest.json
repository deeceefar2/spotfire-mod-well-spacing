{
    "apiVersion": "1.3",
    "version": "1.2.0",
    "name": "Well Spacing (\"Gun Barrel\") Diagram",
    "id": "well-spacing-diagram",
    "icon": "images/wellSpacingGunbarrel_24x24.svg",
    "properties": [
        {
            "name": "mod-config",
            "type": "string",
            "defaultValue": ""
        },
        {
            "name": "zoom",
            "type": "string",
            "defaultValue": "{\"x\":{\"rangeFrom\":0.0,\"rangeTo\":1.0},\"y\":{\"rangeFrom\":0.0,\"rangeTo\":1.0}}"
        }
    ],
    "dataViewDefinition": {
        "colorAxis": {
            "mode": "dual",
            "allowNonAggregatingMeasures": true,
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        },
        "axes": [
            {
                "name": "Trellis By",
                "mode": "categorical",
                "placement": "none"
            },
            {
                "name": "Group By",
                "mode": "categorical",
                "placement": "none"
            },
            {
                "name": "Layer Type",
                "mode": "categorical",
                "placement": "none"
            },
            {
                "name": "Name",
                "mode": "categorical",
                "placement": "none"
            },
            {
                "name": "Size",
                "mode": "continuous",
                "allowNonAggregatingMeasures": true,
                "placement": "none"
            },
            {
                "name": "X",
                "mode": "continuous",
                "allowNonAggregatingMeasures": true,
                "placement": "bottom"
            },
            {
                "name": "Y",
                "mode": "continuous",
                "allowNonAggregatingMeasures": true,
                "placement": "left"
            }
        ],
        "tooltip": {
            "enabled": true
        }
    },
    "files": [
        "index.html",
        "well_spacing_diagram.js",
        "main.js",
        "config/default_configuration.js",
        "config/default_configuration_template.js",
        "common/rect_marking.js",
        "common/trellis.js",
        "common/utility.js",
        "common/viz_configuration.js",
        "common/zoom_handler.js",
        "css/main.css",
        "css/well_spacing_diagram.css",
        "lib/d3.v7.min.js",
        "images/right-angle.png",
        "images/straight-line.png"
    ]
}